#include<iostream.h>
#include<iomanip.h>
#include<math.h>
#include<stdio.h>
#include <stdlib.h>
void coutmonth(int m);
void couthead(int m);
int beforemonth(int y);
int daysofmonth(int m);
int firstday(int y);
int year,weekday,month;
void main()
{
	int i;
	cout<<"input the year number:";
	cin>>year;
	cout<<"input the month number:";
	cin>>month;
	weekday=firstday(year);
	cout<<"\n";
	cout<<"       "<<year<<"年"<<endl;
	for(i=1;i<=12;i++)
	{
		if(i==month){coutmonth(i);
		cout<<"\n"<<endl;}
	}   
	system("pause") ;
}
void coutmonth(int m)
{
	int i,days,day;
	day=beforemonth(month);
	weekday=(weekday+day)%7;
	if(m==month){
	couthead(month);}
	
	days=daysofmonth(month);
	
	for(i=1;i<=days;i++)
	{
		cout<<setw(5)<<i;
		weekday=(weekday+1)%7;
	if(weekday==0) cout<<"\n"<<"    ";
	}
}
void couthead(int m)				//输出每月日历的第一行标题
{ int i;
cout<<"\n";
if(m<10)
{cout<<m<<" 月   日   一   二   三   四   五   六"<<"\n";
cout<<"    ";}
else
{cout<<m<<"月   日   一   二   三   四   五   六"<<"\n";
cout<<"    ";}
for(i=0;i<weekday;i++)				//确定每月第一天的位置
cout<<"     ";
}
int daysofmonth(int m)					//计算每月的天数
{ switch (m)
{ case 1:				//1、3、5、7、8、10、12月有31天
case 3:
case 5:
case 7:
case 8:
case 10:
case 12:return 31;
case 4:					//4、6、9、11月有30天
case 6:
case 9:
case 11:return 30;
case 2:if (((year%4==0 && year%100!=0)||year%400==0))	//闰年2月有29天
return 29;
else 						//平年2月有28天
return 28;
default: return 0;
}
}
int firstday(int y)	//判断某年元旦是星期几
{ double s ;
s=floor(year-1+(year-1)/4.0-(year-1)/100.0+(year-1)/400.0+1);	
return (int)s%7;
}
int beforemonth(int y)
{
	int sum=0,i=1;
	for(i=1;i<month;i++)
	sum=sum+daysofmonth(i);
	return sum;
}
